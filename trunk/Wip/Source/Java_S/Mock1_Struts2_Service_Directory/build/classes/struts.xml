<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<package name="default" extends="struts-default">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>

		<action name="login" method="execute"
			class="mock.appcode.web.action.LoginAction">
			<result name="input">/index.jsp</result>
			<result name="success" type="tiles">welcome.tiles</result>
			<result name="errorlogin">index.jsp</result>
		</action>

		<action name="showOrganistation" method="showOrganistation"
			class="mock.appcode.web.action.LoginAction">
			<result name="org" type="tiles">org.tiles
			</result>
		</action>

		<action name="showService" method="showService"
			class="mock.appcode.web.action.LoginAction">
			<result name="service" type="tiles">service.tiles
			</result>
		</action>
	</package>
</struts>